<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../style.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Document</title>
  </head>
  <body>
    <!-- navbar -->
    <nav class="flex justify-between py-5 px-10 shadow">
      <!-- first party -->
      <div class="first-party navbrand flex items-center gap-20">
        <div class="navbrand flex items-center gap-2">
          <i
            class="fa-solid fa-microchip w-6 h-6 rounded-full flex justify-center items-center bg-sky-600 text-white text-xl"
          ></i>
          <span class="uppercase font-semibold">zagarov</span>
        </div>
        <!-- search  section -->
        <div class="searchinput flex items-center relative">
          <input
            class="appearance-none rounded w-full py-3 px-4 text-gray-700 leading-normal focus:outline-none focus:shadow"
            type="search"
            placeholder="Search here..."
          />
          <i
            class="fa-solid fa-magnifying-glass absolute text-2xl right-0 text-gray-400 cursor-pointer"
          ></i>
        </div>
      </div>

      <!-- second party nav -->
      <div class="second-party flex items-center gap-20">
        <!-- notification -->
        <div class="notificaico">
          <i class="fa-regular fa-bell text-2xl"></i>
        </div>

        <div class="user flex items-center gap-3">
          <div class="user-info flex items-center gap-2">
            <img
              src="https://i.pinimg.com/564x/a2/7f/a1/a27fa1898256ae4d5dccecee9e3823c7.jpg"
              alt=""
              width="50"
              height="50"
              class="rounded-full"
            />
            <div class="username text-center">
              <p class="font-bold capitalize">zghari hicham</p>
              <p class="text-gray-400 capitalize">frontend Dev</p>
            </div>
          </div>

          <div
            class="icondropdown border border-neutral-400 rounded-full w-5 h-5 flex items-center justify-between cursor-pointer"
          >
            <i
              class="fa-solid fa-angle-down text-sm w-100 text-slate-400 mx-auto my-auto"
            ></i>

            <ul class="dropdownMenu shadow">
              <li><a href="">user info</a></li>
              <li><a href="">profile image</a></li>
              <li><a href="">delete </a></li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <section class="flex">


      <!--====== sidbare imported from component ============  -->

      <%- include('./component/sidebar.ejs' ,{currentPage:"search"}) %>

      <!-- content -->

      <section
        class="container bg-slate-50 mx-auto p-7 h-auto flex flex-col gap-6 rounded-tl-3xl"
      >
        

        <!-- filter -->
        <section class="w-full h-16 border rounded">
            <h1 class="text-4xl font-bold capitalize text-violet-600 text-center ">search result</h1>
        </section>

        <!-- display my work -->
        <section class="w-full mt-4 rounded flex flex-wrap gap-10">
          <!-- card  -->

          <table
          style="width: 99%"
          class="text-center mx-auto table mt-5 table-striped border"
        >
          <thead class="border">
            <tr>
              <th scope="col">#</th>
              <th scope="col">platform</th>
              <th scope="col">catigory</th>
              <th scope="col">Country</th>
              <th scope="col">create at</th>
              
              <th scope="col">Action</th>
            </tr>
          </thead>




          <!-- display the searched data if the lenght of array != 0 -->
          <% if (searchedData.length!=0) { %>
           
           <% searchedData.forEach((item,i) => { %>
            
            <tbody>
            
        
           
              <tr>
                <th scope="row"><%= i+1%></th>
                <td ><%= item.platform %> </td>
                <td ><%= item.catigory %></td>
                <td ><%= item.country %></td>
                <td ><%=moment(item.createdAt).fromNow()  %></td>
                <td class="flex justify-center items-center gap-2 border ">
                  <a href="/itemdetails/<%=item._id %>" class="text-2xl text-blue-500" ><i class="fa-regular fa-eye "></i></a>
        
                  <a href="/edit/<%= item._id %>" class="text-2xl text-green-500" >
                    <i class="fa-regular fa-pen-to-square"></i>
                  </a>
                <form action="/delete/<%= item._id %>?_method=DELETE" method="post">
                  <button  type="submit" class="text-2xl text-red-500">
                    <i class="fa-regular fa-trash-can"></i>
                </button>
                </form>
                </td>
              </tr>
           
        
        
          </tbody>




           <% }) %>




          <% } else{%>
            <!-- if the searched data array langth =0 -->

            <span class="text-violet-600 text-2xl capitalize w-34 bg-violet-100 p-2 rounded text-center mx-auto">no data available </span>


          <% } %>




         

       


        </table>

        </section>
      </section>
    </section>


    <!-- footer imported from component================ -->
    <%- include('./component/footer.ejs') %>
  </body>
</html>
